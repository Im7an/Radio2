<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left|top"
    android:id="@+id/notification_layout"
    android:background="@color/controls_bg_dark">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/notif_ombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_white_36dp"
            android:tint="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="12dp"
            android:paddingLeft="9dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la radio à l'écoute"
            android:textSize="13.5dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/notif_ombre"
            android:layout_marginStart="9dp"
            android:id="@+id/notif_name"
            android:paddingTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="état du lecteur"
            android:textSize="12dp"
            android:textColor="@color/white_10"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/notif_ombre"
            android:layout_marginStart="9dp"
            android:id="@+id/notif_text"
            android:paddingTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Tapotez pour ouvrir)"
            android:textSize="10dp"
            android:textColor="@color/white_10"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:paddingTop="40dp"
            android:paddingRight="5dp"/>


    </RelativeLayout>


</LinearLayout>